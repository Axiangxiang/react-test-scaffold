{
  "name": "react-test-scaffold",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "cypress": "start-server-and-test start http://localhost:1234 cypress:run",
    "test": "jest",
    "prepush": "npm test && npm run jest-coverage-ratchet-auto-commit",
    "jest-coverage-ratchet-auto-commit": "jest-coverage-ratchet && (git add package.json && git commit -m 'AUTO INCREASE TEST COVERAGE') || echo 'continue'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "babel-jest": "^26.2.2",
    "cypress": "^4.11.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-coverage-ratchet": "^0.2.3",
    "parcel-bundler": "^1.12.4",
    "start-server-and-test": "^1.11.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/setupFiles/mockSetup.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
      }
    }
  }
}
